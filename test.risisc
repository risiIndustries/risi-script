#!/bin/risiscript
metadata:
  name: "Test script"
  id: "io.risi.test"
  description: "Basic test script, used for development. Do not run."
  dependencies: # Just put None for no dependencies
    None
  root: False
  one_time_use: True
  risiscript_version: 1.0
  reboot: True

run: # Conflicts with install function
  init:
    boolean_var:
      - BOOLEAN
      - "Toggle this"
      - True
    description:
      - DESCRIPTION
      - "This is a description"
    warning:
      - WARNING
      - "Warning"
      - "This is a warning description"
  bash: |
    echo ${BASH_SOURCE}
    echo "hello world"
    sleep 3
  checks: # use $varname to access variable
    - COMMANDOUTPUTCONTAINS:
      - "echo $boolean_var"
      - "True"
